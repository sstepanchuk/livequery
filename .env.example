# PostgreSQL connection (requires logical replication permissions)
DATABASE_URL=postgres://user:password@localhost:5432/mydb

# NATS server
NATS_URL=nats://localhost:4222

# Replication slot name (will be created if not exists)
REPLICATION_SLOT=livequery_slot

# Publication name (will be created for ALL TABLES if not exists)
PUBLICATION=livequery_pub

# Client inactivity timeout in seconds (default: 30)
# Clients that don't send heartbeat within this time will be removed
CLIENT_TIMEOUT_SECS=30

# Cleanup check interval in seconds (default: 10)
# How often to check for inactive clients
CLEANUP_INTERVAL_SECS=10

# Logging
RUST_LOG=livequery_server=info
