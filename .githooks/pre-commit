#!/bin/sh
# Pre-commit hook for Rust projects

set -e

echo "ğŸ” Running cargo fmt..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo "âŒ Format check failed. Run 'cargo fmt' to fix."
    exit 1
fi

echo "ğŸ” Running cargo clippy..."
cargo clippy --all-features -- -D warnings
if [ $? -ne 0 ]; then
    echo "âŒ Clippy found issues."
    exit 1
fi

echo "âœ… Pre-commit checks passed!"
